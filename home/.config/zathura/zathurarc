#{{{ Colours
set guioptions Sans\ 11

set default-bg              "#1d2021"
set default-fg              "#3c3836"

set statusbar-fg            "#bdae93"
set statusbar-bg            "#3c3836"

set inputbar-bg             "#1d2021"
set inputbar-fg             "#d5c4a1"

set notification-error-bg   "#fb4934"
set notification-error-fg   "#1d2021"

set notification-warning-bg "#fb4934"
set notification-warning-fg "#1d2021"

set highlight-color         "#fabd2f"
set highlight-active-color  "#83a598"

set index-active-bg         "#83a598"

set completion-highlight-fg "#504945"
set completion-highlight-bg "#8ec07c"

set completion-bg           "#504945"
set completion-fg           "#8ec07c"

set notification-bg         "#b8bb26"
set notification-fg         "#1d2021"

set recolor-lightcolor      "#1d2021"
set recolor-darkcolor       "#ebdbb2"

set recolor                 "true"
set recolor-keephue         "true"
set recolor-reverse-video   "false"
#}}}

#{{{ Layout
set adjust-open           width
set incremental-search    false
set statusbar-home-tilde  true
set selection-clipboard   primary
#}}}

#{{{ Other Options
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-step 50
#}}}

#{{{ Key bindings
map <PageUp> scroll full_up
map <PageDown> scroll full_down
map <BackSpace> scroll full_up all
map <M-v> scroll full_up
map <C-v> scroll full_down

map + zoom in
map - zoom out
map q quit
map w adjust_window width
map z adjust_window bestfit

map <C-g> abort
#}}}
