#{{{ Colours
set guioptions Sans\ 11
set default-bg              "#1d1f21"
set default-fg              "#1d1f21"

set statusbar-fg            "#b5bd68"
set statusbar-bg            "#1d1f21"

set inputbar-bg             "#1d1f21"
set inputbar-fg             "#ecefef"

set notification-error-bg   "#cc6666"
set notification-error-fg   "#1d1f21"

set notification-warning-bg "#cc6666"
set notification-warning-fg "#1d1f21"

set highlight-color         "#f0c674"
set highlight-active-color  "#81a2be"

set index-active-bg         "#81a2be"

set completion-highlight-fg "#37474f"
set completion-highlight-bg "#8abeb7"

set completion-bg           "#37474f"
set completion-fg           "#8abeb7"

set notification-bg         "#b5bd68"
set notification-fg         "#1d1f21"

set recolor-lightcolor      "#1d1f21"
set recolor-darkcolor       "#ecefef"
set recolor                 "true"
set recolor-keephue         "true"
set recolor-reverse-video   "false"
#}}}

#{{{ Layout
set adjust-open           width
set incremental-search    false
set statusbar-home-tilde  true
set selection-clipboard   primary
}}}

#{{{ Other Options
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-step 50
#}}}

#{{{ Key bindings
map <PageUp> scroll full_up
map <PageDown> scroll full_down
map <BackSpace> scroll full_up all
map <M-v> scroll full_up
map <C-v> scroll full_down

map + zoom in
map - zoom out
map q quit
map w adjust_window width
map z adjust_window bestfit

map <C-g> abort
#}}}
