{
  "keyboard.dispatch": "keyCode",
  "telemetry.enableTelemetry": false,
  "extensions.ignoreRecommendations": true,
  "workbench.colorTheme": "SynthWave '84",
  "workbench.sideBar.location": "right",
  "terminal.integrated.fontFamily": "'Fira Code Retina', monospace",
  "editor.lineHeight": 22,
  "editor.letterSpacing": 0.5,
  "editor.minimap.enabled": false,
  "editor.fontWeight": "400",
  "editor.fontLigatures": true,
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 3,
  "editor.renderWhitespace": "all",
  "editor.snippetSuggestions": "top",
  "workbench.startupEditor": "newUntitledFile",
  "editor.glyphMargin": true,
  "workbench.editor.enablePreview": false,
  "explorer.confirmDragAndDrop": false,
  // Formatting Optional.
  "editor.formatOnSave": true,
  "editor.rulers": [80, 120],
  // Files
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/_site": true,
    "**/tmp": true,
    "**/*.pyc": true,
    "**/*.asset-cache": true,
    "**/*.cache": true,
    "**/*.jekyll-cache": true,
    "**/*.tweet-cache": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/*.egg-info": true,
    "**/*.coverage": true,
    "**/celerybeat-schedule": true,
    "**/node_modules": true,
    "**/bower_components": true
  },
  "files.insertFinalNewline": true,
  "files.autoSave": "onFocusChange",
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  // -- Extensions --
  "indentRainbow.colors": [
    "rgba(165, 153, 233,0.5)",
    "rgba(165, 153, 233,0.4)",
    "rgba(165, 153, 233,0.3)",
    "rgba(165, 153, 233,0.2)",
    "rgba(165, 153, 233,0.1)"
  ],
  "vim.foldfix": true,
  "vim.highlightedyank.enable": true,
  "vim.leader": ",",
  "vim.useSystemClipboard": true,
  "go.useLanguageServer": true,
  "color-highlight.markerType": "dot-before",
  "remote.SSH.allowLocalServerDownload": true,
  "revealjs.browserPath": "/usr/bin/firefox",
  "todo-tree.highlights.enabled": true,
  "python.autoComplete.addBrackets": true,
  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  "go.lintTool": "golangci-lint",
  "go.lintOnSave": "workspace",
  "go.vetOnSave": "workspace",
  "window.zoomLevel": 0,
  "todo-tree.tree.showScanModeButton": false,
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.folders.color": "#ff7043",
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "autoDocstring.docstringFormat": "sphinx",
  "autoDocstring.includeName": true,
  "telemetry.enableCrashReporter": false,
  "go.formatTool": "gofmt",
  "autoDocstring.startOnNewLine": true,
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.fontFamily": "'Fira Code Retina', 'sans', monospace",
  "git.confirmSync": false,
  "git.autofetch": true,
  "python.linting.mypyEnabled": true,
  "python.languageServer": "Pylance"
}
